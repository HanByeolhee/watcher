<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.watcher.mapper.NoticeMapper">

	<select id="listCnt" resultType="int" parameterType="noticeVo">
		SELECT
			COUNT(*)
		FROM NOTICE A
		WHERE 1=1
	</select>


	<select id="list" resultType="com.watcher.dto.NoticeDto" parameterType="noticeVo">
		SELECT
			 A.ID
			,A.TITLE
			,A.CONTENTS
            ,A.THUMBNAIL_IMG_PATH
            ,A.REG_ID
            ,A.REG_DATE
            ,A.UPT_ID
            ,A.UPT_DATE
		FROM NOTICE A
		WHERE 1=1
			LIMIT ${(pageNo-1)*listNo},${listNo}
	</select>


